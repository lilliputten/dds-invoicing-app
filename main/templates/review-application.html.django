{% extends "!base-regular.html.django" %}

{% block title %}Review application &mdash; {{ block.super }}{% endblock %}

{% block page_body %}
{{ block.super }}

<form action="{% url 'application:review_application' form.instance.id %}" method="post">

{% csrf_token %}

<fieldset>
  <legend>
    <h1>Review application</h1>
    <p>Some application explanations...</p>
  </legend>
  {% if error_message %}<p><strong>{{ error_message }}</strong></p>{% endif %}
</fieldset>

{% include "blocks/application-form/application-form.django" %}

<div class="form-group form-actions">
  <button type="submit" class="btn btn-primary">Save</button>
</div>

</form>

{% endblock page_body %}
